
# ==============================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ==============================================
APP_NAME="RAG Sistema"
APP_VERSION="1.0.0"
APP_DESCRIPTION="Sistema RAG"
NODE_ENV="development"
PORT=3000
HOST="0.0.0.0"

# ==============================================
# CARACTERÍSTICAS DE LA APLICACIÓN
# ==============================================
ENABLE_CORS=true
ENABLE_SWAGGER=true
SWAGGER_PATH="/api/docs"

# ==============================================
# CONFIGURACIÓN DE OPENAI
# ==============================================
OPENAI_API_KEY=""
OPENAI_CHAT_MODEL="gpt-4"
OPENAI_EMBEDDING_MODEL="text-embedding-3-small"
OPENAI_TEMPERATURE="0.3"
OPENAI_MAX_TOKENS="1000"
OPENAI_REQUEST_TIMEOUT="30000"
OPENAI_MAX_RETRIES="3"
OPENAI_SYSTEM_PROMPT="Eres un asistente experto en restaurantes."
OPENAI_EMBEDDING_URL="https://api.openai.com/v1/embeddings"

# ==============================================
# CONFIGURACIÓN DE BASE DE DATOS VECTORIAL
# ==============================================
CHROMA_URL="http://localhost:8000"
CHROMA_COLLECTION_NAME="restaurant_knowledge"
DB_MAX_RESULTS="10"
DB_SIMILARITY_THRESHOLD="0.7"
DB_CONNECTION_TIMEOUT="5000"
DB_MAX_RETRIES="3"
DB_PERSIST_DATA="true"

# ==============================================
# CONFIGURACIÓN DE SEGURIDAD
# ==============================================
JWT_SECRET="tu-super-secreto-jwt-key-aqui"
JWT_EXPIRES_IN="3600"
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW_MS="900000"
API_KEY_HEADER="x-api-key"
ENABLE_API_KEY="false"

# ==============================================
# CONFIGURACIÓN DE LOGGING
# ==============================================
LOG_LEVEL="info"
ENABLE_FILE_LOGGING="true"
LOG_DIR="logs"
LOG_FILE_NAME="app.log"
ERROR_FILE_NAME="error.log"
ENABLE_CONSOLE_LOGGING="true"
LOG_EXCLUDE_CONTEXTS=""

